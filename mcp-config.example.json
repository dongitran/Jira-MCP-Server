{
  "mcpServers": {
    "jira": {
      "command": "node",
      "args": [
        "/absolute/path/to/jira-mcp/server.js",
        "--access_token",
        "YOUR_ACCESS_TOKEN",
        "--refresh_token",
        "YOUR_REFRESH_TOKEN",
        "--client_id",
        "YOUR_CLIENT_ID",
        "--client_secret",
        "YOUR_CLIENT_SECRET"
      ],
      "env": {}
    }
  }
}
