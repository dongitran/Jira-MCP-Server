{
  "name": "@urcard/jira-mcp-server",
  "version": "1.2.0",
  "description": "A Model Context Protocol (MCP) server for Jira integration with OAuth token-based authentication. Provides 16 powerful tools for task management, sprint support, team workload tracking, comments, and monthly hours calculation.",
  "main": "server.js",
  "type": "module",
  "bin": {
    "jira-mcp-server": "./bin/jira-mcp-server.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "moment": "^2.30.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.18.0",
    "nodemon": "^3.1.11",
    "vitest": "^4.0.14"
  },
  "keywords": [
    "jira",
    "mcp",
    "model-context-protocol",
    "oauth",
    "atlassian",
    "claude",
    "ai",
    "automation",
    "task-management",
    "agile"
  ],
  "author": "dongtran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dongitran/Jira-MCP-Server.git"
  },
  "bugs": {
    "url": "https://github.com/dongitran/Jira-MCP-Server/issues"
  },
  "homepage": "https://github.com/dongitran/Jira-MCP-Server#readme"
}
